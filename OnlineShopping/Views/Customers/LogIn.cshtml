@model IEnumerable<OnlineShopping.Models.Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    .im img{
        height:100vh;
        width:100%;
    }
   /* .man{
        position:absolute;
    }*/

  .man{
      position:relative;
  }
    .cont {
        position: absolute;
        top: 20%;
        left:20%;
        transform:translate(-50px,-50px);
        width:100%;
        
  
    }
</style>

@using (Html.BeginForm("LogIn", "Customers"))
{
    @Html.AntiForgeryToken()

   
    <div class="man">
        <div class="im">
            <img src="~/Content/Customer/images/gate-scaled.jpg" />
        </div>
        <div class="cont">
            <div class="container bg" style="margin-bottom:210px;">
                
                <div class="row">

                    <div class="col-md-5">
                        <h3 class="text-center"> Log In </h3>
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="email" name="Customer_Email" required class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="">Password</label>
                            <input type="password" name="Customer_Password" required class="form-control">

                        </div>


                        <div class="form-group ">

                            <input type="submit" value="Log In" required class="btn btn-danger ">
                        </div>
                        <div class="bg-light">
                            @Html.ActionLink("If You Not Register than Sign Up", "SignUp")
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>



}