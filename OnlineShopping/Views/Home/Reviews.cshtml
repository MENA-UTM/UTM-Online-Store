@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<OnlineShopping.Models.Feadback>

@{
    ViewBag.Title = "Reviews";
}

<h2>Reviews</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FeadBack_Comments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Customer_FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Prod_Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeadBack_Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Customer_FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Prod_Name)
            </td>
       
        </tr>
    }

</table>
